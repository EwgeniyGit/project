@model List<EQDataModel.sprReactSafetyClasses>

<legend class = "text-info">Справочник классов безопасности РУ</legend>

@using (Ajax.BeginForm("sprReactClassSafety", "Lists", new AjaxOptions { UpdateTargetId = "LoadedContent", HttpMethod = "POST" }))
{
    @ViewBag.Message
    <div class="container" id ="ReactClassSafetyList">
        <table class="main-table">
            <tr>
                <th class="column-header">Код</th>
                <th class="column-header">Наименование</th>
            </tr>
            
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td class="table-label">@Html.DisplayFor(m => m[i].ID)</td>
                        <td class="table-label">@Html.DisplayFor(m => m[i].ClassName)</td>
                    </tr>
                }
        </table>
    </div>
}

@Styles.Render("~/Content/tables-styles.css")