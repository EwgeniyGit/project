@model List<EQDataModel.sprReactors>

<legend class = "text-info">Справочник РУ</legend>

    @ViewBag.Message
    <div class="container" id ="ReactorsList">
        <table class="main-table">
            <tr>
                <th class="column-header">Код</th>
                <th class="column-header">Название</th>
            </tr>            
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td class="table-label">@Html.DisplayFor(m => m[i].ID)</td>
                        <td class="table-label">@Html.DisplayFor(m => m[i].Name)</td>
                    </tr>
                }
        </table>
    </div>

@Styles.Render("~/Content/tables-styles.css")