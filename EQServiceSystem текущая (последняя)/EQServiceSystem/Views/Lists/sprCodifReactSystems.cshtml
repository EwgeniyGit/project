@model EQServiceSystem.ViewModels.CodifReactSystems

<legend class = "text-info">Кодификатор систем РУ</legend>

    @ViewBag.Message
    <div class="container" id ="RepairWorksList">
        <table>
            <tr class="row">
                <th class="bordered">Код системы</th>
                <th class="bordered">Код подсистемы</th>
            </tr>
            
                @for (int i = 0; i < Model.Codifiers.Count; i++)
                {
                    <tr class="row">
                        <th>@Html.DisplayFor(m => m.Codifiers[i].SystemCode)</th>
                        <th>@Html.DisplayFor(m => m.Codifiers[i].SubSystemCode)</th>
                    </tr>
                }
        </table>
    </div>
